#include<iostream>
using namespace std;
int main(){
    int i,k,j,n;
    cout<<"Enter the value of n"<<endl;
    cin>>n;
    for(i=1;i<=n;i++){
        for(j=1;j<i;j++){
            cout<<".";
        }
        for(k=n;k>=i;k--){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
