#include<iostream>
using namespace std;
int main(){
    int i,j,n,s,k,l;
    cout<<"Enter the value of n"<<endl;
    cin>>n;
    for(i=1;i<=(2*n)-1;i++){
        cout<<"*";
    }
    cout<<endl;
    for(i=1;i<n;i++){
        for(j=n;j>i;j--){
            cout<<"*";
        }
        for(k=1;k<=i+(i-1);k++){
            cout<<".";
        }
        for(s=n;s>i;s--){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
